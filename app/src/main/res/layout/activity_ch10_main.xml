<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch10_dialog_permission.Ch10MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/ch10sampleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="토스트 후처리 확인"
            style="@style/MyTextStyle"/>

        <Button
            android:id="@+id/ch10dateBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="데이트 피커 확인"
            style="@style/MyTextStyle"/>

        <TextView
            android:id="@+id/ch10dateResultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MyTextStyle"/>


        <Button
            android:id="@+id/ch10timeBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="타임 피커 확인"
            style="@style/MyTextStyle"/>

        <TextView
            android:id="@+id/ch10timeResultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MyTextStyle"/>

        <Button
            android:id="@+id/ch10customDialBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="커스텀 다이얼로그 창 확인"
            style="@style/MyTextStyle"/>

        <Button
            android:id="@+id/ch10customDialBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="커스텀 다이얼로그 목록 확인"
            style="@style/MyTextStyle"/>

        <TextView
            android:id="@+id/ch10customResultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MyTextStyle"/>


        <Button
            android:id="@+id/ch10customDialBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="커스텀 다이얼로그 중복 선택 확인"
            style="@style/MyTextStyle"/>

        <TextView
            android:id="@+id/ch10customResultTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/MyTextStyle"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>